//generate fibbonacci for 1st 10 digits

#include<stdio.h>

main(){
int a=0,b=1,s=0,i=2;

printf("The fibbonacci for first 10  umbers is : \n");
printf("%d\t",a);
printf("%d\t",b);

while (i<10){
s=a+b;
printf("%d\t",s);
a=b;
b=s;
i+=1;
}
printf("\n");
printf("TASK ENDED \n");

}

//generate factorial of given number

#include<stdio.h>
int fact(int a){

if (a==1){
return 1;}
else {
return a*fact(a-1);}

}

main(){
int a,z;

printf("Enter the number \n");
scanf("%d",&a);
z=fact(a);
printf("The Factorial of %d is %d",a,z);

printf("\n");
printf("TASK ENDED \n");

}

// to calculate sum of two numbers 

#include<stdio.h>

void sum(){

int a,b,c;
printf("Enter two numbers \n");
scanf("%d%d",&a,&b);
c=a+b;
printf("The sum of %d and %d is %d \n",a,b,c);

}

main(){

sum();
printf("\n");
printf("TASK ENDED\n");

}

// to check if number is palindrome or not

#include<stdio.h>

int pal(int x){
int t,r,s;
t=x;

while (t!=0){
r=t%10;
s=s*10+r;
t/=10;
}

if (s==x){
return 1;}
else{
return 0;}

}


main(){

int n,z;
printf("enter a number\n");
scanf("%d",&n);

z=pal(n);

if (z==1){
printf("The Number Is A Palindrome \n");}
else{
printf("The Number Is Not A Palindrome \n");}

printf("TASK ENDED\n");
}

// to check if number is palindrome or not

#include<stdio.h>

main(){

int i=0,z=0,c=1;
char n[1000],k[1000];
printf("enter a string\n");
scanf("%[^\n]s",n);

while (n[i]!='\0'){
i++;
z++;
}

for (i=0;i<z;i++){
k[z-1-i]=n[i];
}

for (i=0;i<z;i++){

if (k[i]!=n[i]){
printf("The String Is Not Palindrome\n");
c=-1;
break;
}

}

if (c==1){
printf("The String Is A Palindrome \n");
}

printf("TASK ENDED\n");
}


// to print a pattern 1

#include<stdio.h>

main(){

int i,j;
for (i=0;i<3;i++){

for (j=0;j<=i;j++){

printf("* ");

}
printf("\n");
}


}


// to print a pattern 2

#include<stdio.h>

main(){

int i,j,k;
for (i=0;i<3;i++){

for (j=2-i;j>=0;j--){
printf(" ");}

for (k=0;k<i+1;k++){
printf("* ");
}
printf("\n");
}

}


